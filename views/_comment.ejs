<li id="comment-<%= comment._id %>">
    <p>
        <% if ( locals.user ) { %>
            <a class="delete-comment-button" href="/comments/destroy/<%=comment.id %>">Delete</a>
            <% } %>


                <%= comment.content %><br>
                    <small>
                        <%= comment.user.name %>
                    </small>
                    <small>
                        <% if (locals.user){ %>
                            <a class="toggle-like-button" data-likes="<%= comment.likes.length %>"
                                href="/likes/toggle/?id=<%=comment._id%>&type=Comment">
                                <%= comment.likes.length %> Likes
                            </a>
                            <% } else {%>
                                <%= comment.likes.length %> Likes
                                    <% } %>
                    </small>
    </p>
</li>